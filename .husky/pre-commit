#!/bin/sh

# Go backend checks
echo "ğŸ” Running backend pre-commit checks..."

# Check if any Go files are being committed
GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -n "$GO_FILES" ]; then
  echo "ğŸ“ Go files detected in commit, running golangci-lint..."
  
  # Check if golangci-lint is available
  if ! command -v golangci-lint >/dev/null 2>&1; then
    echo "âŒ golangci-lint is not installed or not in PATH"
    echo "ğŸ’¡ Install it with: curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b \$(go env GOPATH)/bin v1.61.0"
    exit 1
  fi
  
  # Run golangci-lint
  echo "   Linting Go files..."
  if ! golangci-lint run --out-format=colored-line-number --print-issued-lines=false; then
    echo "âŒ golangci-lint found issues in Go files"
    echo "ğŸ’¡ Fix the issues above or run: git commit --no-verify to bypass"
    exit 1
  fi
  echo "âœ… golangci-lint passed for all Go files"
else
  echo "ğŸ“„ No Go files in this commit, skipping golangci-lint"
fi

# Frontend checks
echo "ğŸ” Running frontend pre-commit checks..."
cd frontend || exit 1

# Run lint-staged for staged files first (faster feedback)
echo "ğŸ§¹ Running lint-staged..."
npx lint-staged || exit 1

# Run TypeScript/Svelte type checking on staged files only
echo "ğŸ“ Type checking staged files..."
# Get staged .ts, .svelte files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|svelte)$' | head -20)

if [ -n "$STAGED_FILES" ]; then
  echo "Checking types for staged files..."
  npm run typecheck || {
    echo "âŒ TypeScript errors found in staged files."
    echo "ğŸ’¡ Fix errors or run: git commit --no-verify to bypass"
    exit 1
  }
else
  echo "â„¹ï¸ No TypeScript/Svelte files staged, skipping typecheck"
fi

echo "âœ… All pre-commit checks passed!"
